@model ItrKurs.Models.Book
@{
    ViewBag.Title = "Добавление book коллекции";
}
<table class="table table-hover home-content table-bordered ">
    <thead class="thead-light">
        <tr>
            @for (int i = 0; i < @ViewBag.strArray.Length; ++i)
            {
                <td>
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="@i" onclick="toggle(this,'@i'+'a')">
                        <label class="custom-control-label" for="@i">@ViewBag.strArray[@i]</label>
                    </div>
                </td>
            }
        </tr>
    </thead>
    
    </table>
<form asp-action="CreateCollection" asp-controller="Book">

    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Discription" class="control-label">Описание</label>
        <input type="text" asp-for="Discription" class="form-control" />
    </div>


    


    <div class="form-group">
        <label asp-for="Tags" class="control-label">Tags</label>
        <input type="text" asp-for="Tags" class="form-control" />
    </div>


    <div class="form-group" style="display:none" id="0a">
        <label asp-for="Date" class="control-label">Date</label>
        <input type="date" asp-for="Date" class="form-control" />
    </div>


    <div class="form-group" style="display:none" id="1a">
        <label asp-for="Genres" class="control-label">Genres</label>
        <input type="text" asp-for="Genres" class="form-control" />
    </div>

    <div class="form-group" style="display:none" id="2a">
        <label asp-for="Comment" class="control-label">Comment</label>
        <input type="text" asp-for="Comment" class="form-control" />
    </div>

    <div class="form-group" style="display:none" id="3a">
        <label asp-for="Author" class="control-label">Author</label>
        <input type="text" asp-for="Author" class="form-control" />
    </div>

    <div class="form-group" style="display:none" id="4a">
        <label asp-for="Pages" class="control-label">Pages</label>
        <input type="number" asp-for="Pages" class="form-control" />
    </div>



    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>

</form>

<form method="post" enctype="multipart/form-data">
    <div id="fileBasket" class="filebasket">
        Drag-n-Drop files here.
    </div>
    <br />
    <img id="progress" src="~/Images/Progress.gif" />
</form>