@model ItrKurs.Models.Book
@{
    ViewBag.Title = "Добавление book коллекции";
}
@if (User.Identity.IsAuthenticated)
{
    <table class="table table-hover home-content table-bordered ">
        <thead class="thead-light">
            <tr>
                @for (int i = 0; i < @ViewBag.strArray.Length; ++i)
                {
                    <td>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="@i" onclick="toggle(this,'@i'+'a')">
                            <label class="custom-control-label" for="@i">@ViewBag.strArray[@i]</label>
                        </div>
                    </td>
                }
            </tr>
        </thead>
    </table>


    <form asp-action="CreateCollection" asp-controller="Book">

        <div class="form-group">
            <label asp-for="Name" class="control-label">Название</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Discription" class="control-label">Описание</label>
            <input type="text" asp-for="Discription" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Tags" class="control-label">Tags</label>
            <input type="text" asp-for="Tags" class="form-control" />
        </div>

        <div class="form-group" style="display:none" id="0a">
            <label asp-for="Date" class="control-label">Date</label>
            <input type="date" asp-for="Date" class="form-control" />
        </div>

        <div class="form-group" style="display:none" id="1a">
            <label asp-for="Genres" class="control-label">Genres</label>
            <input type="text" asp-for="Genres" class="form-control" />
        </div>

        <div class="form-group" style="display:none" id="2a">
            <label asp-for="Comment" class="control-label">Comment</label>
            <input type="text" asp-for="Comment" class="form-control" />
        </div>

        <div class="form-group" style="display:none" id="3a">
            <label asp-for="Author" class="control-label">Author</label>
            <input type="text" asp-for="Author" class="form-control" />
        </div>

        <div class="form-group" style="display:none" id="4a">
            <label asp-for="Pages" class="control-label">Pages</label>
            <input type="number" asp-for="Pages" class="form-control" />
        </div>

        <div class="form-group" style="display:none" id="6a">
            <label asp-for="bool1" class="control-label">bool1</label>
            <input type="checkbox" asp-for="bool1" class="form-control" />
        </div>

        <div class="form-group" style="display:none" id="7a">
            <label asp-for="bool2" class="control-label">bool2</label>
            <input type="checkbox" asp-for="bool2" class="form-control" />
        </div>

        <div class="form-group" style="display:none" id="8a">
            <label asp-for="bool3" class="control-label">bool3</label>
            <input type="checkbox" asp-for="bool3" class="form-control" />
        </div>

        <div class="form-group" style="display:none" id="9a">
            <label asp-for="int1" class="control-label">int1</label>
            <input type="number" asp-for="int1" class="form-control" />
        </div>
        <div class="form-group" style="display:none" id="10a">
            <label asp-for="int2" class="control-label">int2</label>
            <input type="number" asp-for="int2" class="form-control" />
        </div>

        <div class="form-group" style="display:none" id="11a">
            <label asp-for="int3" class="control-label">int3</label>
            <input type="number" asp-for="int3" class="form-control" />
        </div>

        <div class="form-group" style="display:none" id="12a">
            <label asp-for="longtext1" class="control-label">longtext1</label>
            <textarea asp-for="longtext1" class="form-control" rows="3"></textarea>
        </div>
        <div class="form-group" style="display:none" id="13a">
            <label asp-for="longtext2" class="control-label">longtext2</label>
            <textarea asp-for="longtext2" class="form-control" rows="3"></textarea>
        </div>
        <div class="form-group" style="display:none" id="14a">
            <label asp-for="longtext3" class="control-label">longtext3</label>
            <textarea asp-for="longtext3" class="form-control" rows="3"></textarea>
        </div>







        <div class="form-group" style="display:none">
            <label asp-for="ImgSrc" class="control-label">ImgSrc</label>
            <input type="text" id="ImgSrc" asp-for="ImgSrc" class="form-control" />
        </div>

        <div class="form-group" style="display:none">
            <label asp-for="bitMask" class="control-label">bitMask</label>
            <input type="text" id="Bitmask" asp-for="bitMask" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" value="Отправить" class="btn btn-default" />
        </div>

    </form>
    <div class="form-group" style="display:none" id="5a">
        <form method="post" enctype="multipart/form-data">
            <div id="fileBasket" class="dropZone">
                <div id="dropZone">
                    Theare are
                </div>
            </div>
            <div class="spinner-border" role="status" id="progress">
                <span class="sr-only">Loading...</span>
            </div>
        </form>
    </div>
        }
        else
        {
        <div style="text-align:center">
            <a class="btn btn-primary" asp-controller="Account" asp-action="Login">Sign In</a>
            <a class="btn btn-success" asp-controller="Account" asp-action="Register">Sign Up</a>
        </div>
        }
